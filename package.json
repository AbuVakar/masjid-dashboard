{
  "name": "silsila-ul-ahwaal",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-icons": "^5.5.0",
    "react-scripts": "^5.0.1",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "react-scripts test --watchAll=false",
    "test:backend": "jest --config jest.config.js --detectOpenHandles",
    "test:coverage": "react-scripts test --coverage --watchAll=false && jest --config jest.config.js --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "setup-admin": "node server/setupAdmin.js",
    "dev": "concurrently \"npm run start\" \"cd server && HOST=127.0.0.1 npm run dev\"",
    "build:prod": "npm run build && cd server && npm start",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.5",
    "concurrently": "^9.2.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.12"
  }
}
